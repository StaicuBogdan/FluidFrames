@model ShoppingCart

<form method="post">
    <input hidden asp-for="FrameId"/>
    <div class="card container pt-4">
        <div class="card-header bg-primary text-light ml-0 row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Frame.ModelName</h1>
                <p class="text-warning"> @Html.Raw(Model.Frame.Description)</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info px-4 py-3">@Model.Frame.FrameType.Name</span>
                <span class="badge bg-warning px-4 py-3">@Model.Frame.Category.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>Booked period</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1 Day</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1 Week</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Price/day</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Frame.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@((Model.Frame.Price7Days/7).ToString("c"))</div>
                            </div>
                        </div>
                        
                        <div class="row pl-2">
                            <p class="text-muted">Owner phone : @Model.Frame.OwnerPhoneNumber</p>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">@Html.Raw(Model.Frame.Description)</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-10">
                                <input asp-for="Count" class="form-control" />
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Frame.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-info form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-success form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}