@model IEnumerable<Frame>

<div class="row pb-3">
    @foreach (var frame in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <img src="@frame.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@frame.ModelName</p>
                                <hr/>
                                <p class="card-title text-info"><b>@Html.Raw(frame.Description)</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Price: <b>@frame.Price.ToString("0.00")</b></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>@((frame.Price7Days/7).ToString("0.00")) per day</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@frame.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
